<!doctype html>
<html>
<head>
    <title>Voting app - List</title>

    <script src="https://localhost:8080/socket.io/socket.io.js"></script>
    <script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
    <script type="text/javascript" charset="utf-8">

    jQuery(document).ready(function(){

        var socket = io.connect('http://localhost:8080');//cambiar puerto

        socket.on('lista', function  (data) {
            for (var i=0; i<data.length; i++){
                var tupla = data[i];
                jQuery("#" + tupla.id).find(".result_a").text(tupla.a);
                jQuery("#" + tupla.id).find(".result_b").text(tupla.b);
                console.log(jQuery("#" + tupla.id).find(".result_a"));
            }
            
        });

        socket.on('outcoming_vote', function  (data) {
            console.log('outcoming_vote');
            jQuery("#" + data.id).find(".result_a").text(data.a);
            jQuery("#" + data.id).find(".result_b").text(data.b);
        });
    });
    </script>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>

.well {
  min-height: 80px;
}
.well a{
    width: 180px;
}

.modulo_votacion {
    border-top: 3px solid grey;
    margin-bottom: 1em;
    padding: 1em;
    position: relative;
}

p.v_status {
    font-size: 1.2em;
}

p.v_id{
    position: absolute;
    right: 0;
    top: 0;
    padding-right: 1em;
    padding-top: .4em;
    color: grey;
}

div.results {
    border-top: 1px solid black;
}
div.results div{
    width: 50%;
    float: left;
    padding: 1em;
}

div.results div h4{
    text-align: center; 
}
div.results div p{
    text-align: center; 
    font-size: 3em;
}
.btn{
    width: 120px;
    float: right;
    margin-left: .5em;
    margin-top: .5em;
}
#btn_vote{
    float: left;
    width: 200px;
}

hr.clear{
    margin-top: 2em;
    clear: both;
    border: 0;
}
#footer {
  
  background-color: #f5f5f5;
  height: 5em;
}
#footer p{
    padding-top: 1em;
    text-align: center;
}


</style>
</head>
<body>
<div class="container">

    <div class="row">
        <p>Bienvenido <%= user.local.email %></p>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="page-header text-center">
        <h1><span class="fa fa-plus-square"></span> VOTACIONES</h1>
    </div>

    <div class="row">
        <!-- LOCAL INFORMATION -->
        <div class="col-sm-12">
            <div class="well">
                <a href='/voting_create_update'  class="btn btn-default btn-sm">CREAR VOTACIÓN</a>
            </div>
        </div>
    </div>


    <% for(var i=0; i<voting.length; i++) { %>
    <div class="row">
        <div class="col-sm-12">
            <div class="modulo_votacion" id="<%= voting[i].id %>">
                <p class="v_status">Votación <%= voting[i].status %></p>
                <p class="v_id">ID: <%= voting[i].id %></p>
                
                <h3><%= voting[i].title %></h3>
                <p class="v_comment"><%= voting[i].comment %></p>
                <div class="results">
                    <div class="v_optionA">
                        <h4><%= voting[i].optionA %></h4>
                        <p class="result_a">333</p>
                    </div>
                    <div class="v_optionB">
                        <h4><%= voting[i].optionB %></h4>
                        <p class="result_b">444</p>
                    </div>
                </div>
                <div class="tools">
                    <a class='btn btn-warning btn-lg' id="btn_vote" href='/voting_vote/<%= voting[i].id %>'>VOTAR</a>
                    <a class='btn btn-warning btn-lg' href='/voting_create_update/<%= voting[i].id %>'>Editar</a>
                    <a class='btn btn-warning btn-lg' href='/deletion/<%= voting[i].id %>'>Borrar</a>
                </div>
                <hr class="clear">
            </div>
        </div>
    </div>
    <% } %>

    <div class="row">
        <div id="footer"><p>VOTAPP</p></div>
    </div>


</div>





</body>
</html>