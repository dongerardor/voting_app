<!doctype html>
<html>
<head>
    <title>VOTAPP - crear/actualizar votación</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>

.well {
  min-height: 80px;
}
.well a{
    width: 180px;
}

.modulo_votacion {
    border-top: 3px solid grey;
    margin-bottom: 1em;
    padding: 1em;
    position: relative;
}

p.v_status {
    font-size: 1.2em;
}

p.v_id{
    position: absolute;
    right: 0;
    top: 0;
    padding-right: 1em;
    padding-top: .4em;
    color: grey;
}

div.results {
    border-top: 1px solid black;
}
div.results div{
    width: 50%;
    float: left;
    padding: 1em;
}

div.results div h4{
    text-align: center; 
}
div.results div p{
    text-align: center; 
    font-size: 3em;
}
div.tools{
    text-align: center;
}
.btn{
    width: 120px;
    float: right;
    margin-left: .5em;
    margin-top: .5em;
}
#btn_vote{
    float: none;
    margin: 0 auto;
    width: 200px;
}

hr.clear{
    margin-top: 2em;
    clear: both;
    border: 0;
}
#footer {
  
  background-color: #f5f5f5;
  height: 5em;
}
#footer p{
    padding-top: 1em;
    text-align: center;
}


</style>
    
</head>
<body>
<div class="container">

    <div class="row">
        <p>Bienvenido <%= user.local.email %></p>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="page-header text-center">
        <h1><span class="fa fa-plus-square"></span> CREAR/ACTUALIZAR VOTACIONES</h1>
    </div>


    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-12">
            <div class="well">
                <p>
                    <a href='/voting_list' class="btn btn-default btn-sm">VER VOTACIONES</a>
                </p>

            </div>
        </div>

    </div>

    <div class="row">
        
        <form method="post" role="form" action="/voting_create_update">
            <div class="form-group">
                <label for='title'>Título</label>
                <input class="form-control"  type="text" name='title' id='title' placeholder="Escribir título" value="">
            </div>

            <input type="hidden" name="id_file" id="id_file" value=""> 
        
            <div class="form-group">
                <label for='comment' class="control-label">Comentario</label>
                <textarea class="form-control" rows="5" id="comment" name='comment' id='comment' value=""></textarea>
            </div>

            <div class="form-group">
                <label for='status' class=" control-label">Status</label>
                <select name='status' id='status'>
                    <option value="0">Cerrada</option>
                    <option value="1">Abierta</option>
                </select>
            </div>

            <div class="form-group">
                <label for='optionA' class="col-sm-2 control-label">Opción A:</label>
                <input class="form-control" type='text' name='optionA' id='optionA' value="">
            </div>

            <div class="form-group">
                <label for='optionB' class="col-sm-2 control-label">Opción B:</label>
                <input class="form-control" type='text' name='optionB' id='optionB' value="">
            </div>

            <button type="submit" class="btn btn-default">Submit</button>

        </form>
    </div>

</div>

<script>

    <% if (typeof(id) != 'undefined') { %>
        window.onload = function(){
        
            var id_file = "<%= id %>";
            document.getElementById('id_file').value = id_file;
 
            var title = "<%= title %>";
            document.getElementById('title').value = title;

            var comment = "<%= comment %>";
            document.getElementById('comment').value = comment;
 
            var status = "<%= status %>";
            document.getElementById("status").selectedIndex = "<%= status %>";
 
            var optionA = "<%= optionA %>";
            document.getElementById('optionA').value = optionA;

            var optionB = "<%= optionB %>";
            document.getElementById('optionB').value = optionB;
                
         }
    <% } %>
    
</script>
</body>
</html>